{
  "preset": "google",
  "esnext": true,
  "maximumLineLength": {
    "value": 160,
    "allExcept": ["comments", "regex"]
  },
  "validateCommentPosition": {
    "position": "above"
  },
  "requirePaddingNewLinesAfterUseStrict": true,
  "requireBlocksOnNewline": true,
  "disallowVar": true,
  "disallowTrailingComma": true,
  "disallowMixedSpacesAndTabs": true,
  "excludeFiles": [
    "node_modules/**",
    "bower_components/**",
    "docs/**"
  ]
}
